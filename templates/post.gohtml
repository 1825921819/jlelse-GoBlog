{{ define "title" }}
  <title>{{ with p . "title" }}{{ . }} - {{end}}{{ blog.Title }}</title>
{{ end }}

{{ define "main" }}
  <main class=h-entry>
    <article>
        {{ with p . "title" }}<h1 class=p-name>{{ . }}</h1>{{ end }}
        {{ with .Content }}
          <div class=e-content>{{ md . }}</div>
        {{ end }}
    </article>
  </main>
{{ end }}

{{ define "post"}}
    {{ template "base" . }}
{{ end }}