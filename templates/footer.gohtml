{{ define "footer" }}
    <footer>
        {{ with menu .Blog "footer" }}
            {{ range $i, $item := .Items }}
                {{ if ne $i 0 }} &bull; {{ end }}<a href="{{ $item.Link }}">{{ $item.Title }}</a>
            {{ end }}
        {{ end }}
        <p translate="no">&copy; {{ dateformat now "2006" }} {{ with user.Name }}{{ . }}{{ else }}{{ .Blog.Title }}{{ end }}</p>
    </footer>
{{ end }}