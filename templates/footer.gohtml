{{ define "footer" }}
    <footer>
        {{ with menu .Blog "footer" }}
            {{ $first := true }}
            {{ range $i, $item := .Items }}
                {{ if ne $first true }} &bull; {{ end }}<a
                href="{{ $item.Link }}">{{ $item.Title }}</a>{{ $first = false }}
            {{ end }}
        {{ end }}
        <p>&copy; {{ dateformat now "2006" }} {{ with user.Name }}{{ . }}{{ else }}{{ .Blog.Title }}{{ end }}</p>
    </footer>
{{ end }}